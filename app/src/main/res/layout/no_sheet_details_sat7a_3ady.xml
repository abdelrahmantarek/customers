<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="2dp"
    android:layout_gravity="center">



    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sheet_driver_nastedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_gravity="center">




            <LinearLayout
                android:background="#f5f5f5"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                </View>


                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/o_white"
                            android:src="@drawable/ic_kilo_metr"/>


                        <TextView
                            android:text="@string/sat7a_kilometer"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:fontFamily="@font/abdo_b"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="1.1 ر.س"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/abdo_b"
                            android:textColor="@color/green_900"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:background="@drawable/o_white"
                            android:src="@drawable/ic_time"/>


                        <TextView
                            android:text="@string/sat7a_Minute"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:fontFamily="@font/abdo_b"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="0.99 ر.س"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/abdo_b"
                            android:textColor="@color/green_900"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/o_white"
                            android:src="@drawable/ic_start_time"/>


                        <TextView
                            android:text="@string/sat7a_Start_the_counter"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="13dp"
                            android:fontFamily="@font/abdo_b"
                            android:textColor="@android:color/darker_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="80.0 ر.س"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/abdo_b"
                            android:textColor="@color/green_900"
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>


                </LinearLayout>




                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp">





                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:id="@+id/sat7a_progress_edit_place_a_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">



                                    <AutoCompleteTextView
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:id="@+id/sat7a_edit_place_a_details"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:fontFamily="@font/al_gemah"
                                        android:gravity="center"
                                        android:hint="@string/From"
                                        android:maxLines="2"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/darker_gray"
                                        android:textSize="13dp"
                                        android:textStyle="bold" />


                                    <ImageView
                                        android:id="@+id/sat7a_image_edit_place_a_details"
                                        android:layout_weight="5"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_location_green_dark"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />


                                </LinearLayout>


                            </LinearLayout>






                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ProgressBar
                                    android:id="@+id/sat7a_progress_edit_place_b_details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"/>



                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <AutoCompleteTextView
                                        android:id="@+id/sat7a_edit_place_b_details"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:dropDownHeight="wrap_content"
                                        android:dropDownWidth="match_parent"
                                        android:fontFamily="@font/al_gemah"
                                        android:gravity="center"
                                        android:hint="@string/to"
                                        android:imeOptions="actionDone"
                                        android:lineSpacingExtra="10sp"
                                        android:maxLines="2"
                                        android:paddingEnd="10dp"
                                        android:textSize="13dp"
                                        android:paddingStart="10dp"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/darker_gray"
                                        android:textStyle="bold"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="5dp"
                                        android:paddingBottom="5dp"
                                        android:paddingTop="5dp"
                                        android:typeface="monospace" />


                                    <ImageView
                                        android:id="@+id/sat7a_image_edit_place_b_details"
                                        android:layout_weight="5"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_location_green_dark"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>




                </LinearLayout>



                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:fontFamily="@font/abdo_b"
                    android:textStyle="bold"
                    android:text="برجى اختيار طريقة الدفع"
                    android:textColor="@color/green"
                    android:textSize="13dp" />




                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>




                <LinearLayout
                    android:id="@+id/sat7a_edit_the_not"
                    android:padding="10dp"
                    android:background="@drawable/shape_button_white"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">



                    <EditText
                        android:padding="10dp"
                        android:textSize="14dp"
                        android:hint="@string/sat7a_Your_feedback_here"
                        android:fontFamily="@font/abdo_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>









                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/shape_button_grey_dark_20"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/sat7a_the_price"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:text="@string/sat7a_the_cost"
                        android:fontFamily="@font/abdo_b"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>








                <LinearLayout
                    android:id="@+id/sat7a_call_the_driver"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_green"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/XML_BL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="1"
                        android:fontFamily="@font/abdo_b"
                        android:textStyle="bold"
                        android:text="@string/Sat7a_Service_provider_request"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />
                </LinearLayout>





                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                </View>








            </LinearLayout>



        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>







</android.support.design.widget.CoordinatorLayout>